<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Login"
    android:background="@drawable/background"
    android:paddingLeft="30dp"
    android:paddingRight="30dp">


<ImageView
    android:layout_centerHorizontal="true"
    android:layout_marginTop="40dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"


    android:background="@drawable/index"/>
    <EditText
        android:id="@+id/k_adi_giris"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:hint="Username"
        android:textColorHint="#ffff"
        android:textColor="#ffff"
        android:inputType="textPersonName"
        android:drawableLeft="@drawable/ic_user_icon"
       />





    <EditText
        android:id="@+id/k_parola_giris"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/k_adi_giris"
        android:layout_below="@+id/k_adi_giris"
        android:ems="10"
        android:textColorHint="#ffff"
        android:hint="Password"
        android:drawableLeft="@drawable/ic_pass_icon"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/giris"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/k_parola_giris"
        android:layout_marginTop="30dp"
        android:text="LogIn"
        android:textColor="#ffff"
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/login_shape"/>

    <TextView
        android:id="@+id/kayıt_ol"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/giris"
        android:layout_marginBottom="10dp"
        android:text="Need a Account? Sign Up "
        android:textColor="#ffff"
        android:textStyle="bold"
        android:textSize="12dp"

        android:textAlignment="center"/>
    <TextView
        android:onClick="Forgot"
        android:id="@+id/forgotpass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/kayıt_ol"
        android:text="ForgottenPassword"
        android:textColor="#ffff"
        android:textStyle="bold"
        android:textSize="12dp"

        android:textAlignment="center"/>


</RelativeLayout>