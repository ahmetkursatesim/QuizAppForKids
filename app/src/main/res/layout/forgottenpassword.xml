<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
  android:background="@drawable/background"
    android:paddingLeft="30dp"
    android:paddingRight="30dp">


    <TextView
        android:id="@+id/k_f_yazi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="109dp"
        android:text="Username"
        android:textColor="#ffff"
        android:textSize="25dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/k_f_giris"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/k_f_yazi"
        android:layout_below="@+id/k_f_yazi"
        android:hint="Username"

        android:textColorHint="#ffff"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/k_e_yazi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/k_f_yazi"
        android:layout_below="@+id/k_f_giris"
        android:text="Email"

        android:textColor="#ffff"
        android:textSize="25dp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/k_e_giris"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/k_f_yazi"
        android:layout_below="@+id/k_e_yazi"
        android:ems="10"
        android:hint="email"

        android:textColorHint="#ffff"/>

    <Button
        android:id="@+id/f_giris"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/k_e_giris"
        android:layout_marginTop="30dp"
        android:text="SendPassword"
        android:textColor="#ffff"
        android:textStyle="bold"
        android:layout_marginBottom="40dp"
        android:background="@drawable/login_shape"/>



</RelativeLayout>